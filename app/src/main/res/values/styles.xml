<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="CustomEditText" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/lightGray100</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>


    <style name="CustomAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>



</resources>
